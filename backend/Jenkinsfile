pipeline {
    agent any

    stages {
        stage('Docker Build') {
            steps {
                bat '''
                    docker --version
                    docker build -t nestjs-app ./backend
                    docker images
                    docker run -d -p 3000:3000 nestjs-app
                '''
            }
        }

        stage('Docker Deploy') {
            steps {
                bat '''
                    docker run -d -p 3000:3000 nestjs-app
                '''
            }
        }
    }
}